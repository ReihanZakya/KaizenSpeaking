<!-- fragment_training_detail.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Declare any variables or LiveData here -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/btn_back"
            android:title="Detail Latithan"
            android:titleTextColor="@color/black"
            android:background="@color/cardview_light_background"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".TrainingDetailFragment"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Header Section -->


        <!-- Video Player Section -->
        <include
            layout="@layout/item_training_session"
            android:id="@+id/itemTrainingSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>


        <!-- Bar Chart Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
            <!-- Placeholder for bar chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Gauge Chart Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardCornerRadius="20dp"
                android:padding="16dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>



                <!-- Placeholder for gauge chart -->


                <com.ekn.gruzer.gaugelibrary.HalfGauge
                    android:id="@+id/gauge_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Analysis Result Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAnalasis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvPageAnalisis"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="140dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/analizeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/hasil_analisis"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </ScrollView>
    </LinearLayout>
</layout>
